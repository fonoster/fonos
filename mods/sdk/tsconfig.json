{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": ".",
    "outDir": "./dist/node",
    "strict": false,
    "noImplicitAny": false, 
    "strictNullChecks": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/client/WebClient.ts",
    "src/web.ts"
  ],
  "references": [
    {
      "path": "../types"
    }
  ]
}
